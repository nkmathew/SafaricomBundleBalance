<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@android:color/holo_red_dark</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="@android:style/Theme.Material">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorBackground">@color/background_material_dark</item>
        <item name="android:statusBarColor">@color/myStatusBarColor</item>
    </style>

    <style name="RedButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:textColor">#ffffff</item>
        <item name="colorButtonNormal">@android:color/holo_red_dark</item>
    </style>

</resources>
